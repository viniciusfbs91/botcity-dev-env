# =============================================================================
# Configurações do Ambiente de Desenvolvimento BotCity
# =============================================================================
# Copie este arquivo para .env e ajuste as configurações conforme necessário
# =============================================================================

# =============================================================================
# CONFIGURAÇÕES DO CONTAINER
# =============================================================================
CONTAINER_NAME=botcity-dev
CONTAINER_HOSTNAME=botcity-development

# =============================================================================
# CONFIGURAÇÕES DE PORTAS
# =============================================================================
# Portas do host que serão mapeadas para o container
VNC_HOST_PORT=5910
SSH_HOST_PORT=2222
VSCODE_HOST_PORT=8080

# Portas internas do container (geralmente não precisam ser alteradas)
VNC_PORT=5910
SSH_PORT=2222
VSCODE_PORT=8080

# =============================================================================
# CONFIGURAÇÕES DE SEGURANÇA
# =============================================================================
# IMPORTANTE: Altere estas senhas em produção!
ROOT_PASSWORD=suasenhaforte123
VNC_PASSWORD=vncsegura123

# =============================================================================
# CONFIGURAÇÕES DE VOLUMES
# =============================================================================
# Caminhos no host para persistir dados
WORKSPACE_PATH=./workspace
CONFIG_PATH=./config
SSH_KEYS_PATH=./ssh-keys

# =============================================================================
# CONFIGURAÇÕES DE RECURSOS
# =============================================================================
# Limites de recursos do container
MEMORY_LIMIT=4G
CPU_LIMIT=2.0
MEMORY_RESERVATION=2G
CPU_RESERVATION=1.0

# =============================================================================
# CONFIGURAÇÕES DE SISTEMA
# =============================================================================
TIMEZONE=America/Sao_Paulo